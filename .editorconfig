root = true

[*]
# Unix-style newlines
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{js,ts,tsx,lua,html,css,mjs,yml}]
indent_size = 2

[{*.{awk,c,dts,dtsi,dtso,h,mk,s,S},Kconfig,Makefile,Makefile.*}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 8

# Aliases for editing config files
alias cfg="git --git-dir=$HOME/.cfg --work-tree=$HOME"
alias cfgz="${EDITOR} ${ZDOTDIR}"
alias cfgn="cd ${HOME}/.config/nvim;${EDITOR} .;cd"
alias cfgt="${EDITOR} ${HOME}/.config/tmux"
alias cfgg="${EDITOR} ${HOME}/.config/ghostty"
# LS aliases
alias ls="ls --color=auto"
alias ll="ls --color=auto -al"
alias llt="ls --color=auto -alt"
# Tmux Alias
alias tma="tmux attach || tmux"
alias mux="tmuxinator"
# Nvim Aliases
alias vim="nvim"
alias vimdiff='nvim -d'
